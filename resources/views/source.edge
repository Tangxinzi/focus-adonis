<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ dataset.title }} - 资源详细</title>
  {{ style('semantic/dist/semantic.min') }}
  {{ style('style/source') }}
</head>
<body>
  <div class="ui container">
    <div class="ui grid centered">
      <div class="fifteen wide column">
        @!component('components.navigator')
      </div>
      <div class="ten wide column">
        @if(dataset.p == 'source')
        <div class="ui divided items card">
          <div class="item">
            <div class="content">
              <a class="header">{{ dataset.title }}</a>
              <div class="description">
                {{ dataset.description }}
              </div>
            </div>
          </div>
        </div>
        <div class="ui divided items card">
          <div class="item">
            <div class="content">
              <div class="meta" style="margin-top: 0;">
                <p class="attrs">导演：{{ dataset.content.attrs }}</p>
                <p class="screenwriter">编剧：{{ dataset.content.screenwriter }}</p>
                <p class="actor">主演：{{ dataset.content.actor }}</p>
                <p class="runtime">放映时长：{{ dataset.content.runtime }}</p>
                <p class="time">上映时间：{{ dataset.content.date }}</p>
                <p class="local">制片国家 / 地区：{{ dataset.content.local }}</p>
              </div>
              <div class="extra">
                @if(dataset.content.douban)
                <a class="ui green label" href="{{ dataset.content.douban.href }}">
                  豆瓣 {{ dataset.content.douban.count }}
                </a>
                @endif
                @if(dataset.content.imdb)
                <a class="ui orange label" href="{{ dataset.content.imdb.href }}">
                  IMDB {{ dataset.content.imdb.count }}
                </a>
                @endif
              </div>
            </div>
          </div>
        </div>
        <div class="ui divided items card">
          <div class="content">
            <div class="meta" style="margin-top: 0;">
              <div class="ui list">
              @each(data in dataset.content.download)
                <div class="item">
                  <div class="right floated content">
                    <a class="ui gray label" href="{{ data.href }}">ED2K</a>
                  </div>
                  <div class="content">
                    <p><a href="{{ data.href }}" target="_blank">{{ data.text }}</a></p>
                  </div>
                </div>
              @endeach
              </div>
            </div>
          </div>
        </div>
        @endif
        @if(dataset.p == 'baiduyun')
        <div class="ui divided items card">
          <div class="item">
            <div class="content">
              <a class="header">{{ dataset.title }}</a>
              <div class="extra">
                <a class="ui label">
                  文件大小 {{ dataset.info.size }}
                </a>
                <a class="ui label">
                  更新日期 {{ dataset.info.date }}
                </a>
              </div>
            </div>
          </div>
        </div>
        @endif
      </div>
      <div class="five wide column">
        @each(data in [0, 1, 2])
        <div class="ui card">
          <div class="content">
            <div class="right floated meta">14h</div>Elliot </div>
          <div class="image">
            <img>
          </div>
          <div class="content"><span class="right floated"> <i class="heart outline like icon"></i> 17 likes </span> <i class="comment icon"></i> 3 comments </div>
          <div class="extra content">
            <div class="ui large transparent left icon input">
              <i class="heart outline icon"></i>
              <input type="text" placeholder="Add Comment...">
            </div>
          </div>
        </div>
        @endeach
      </div>
    </div>
  </div>
</body>
</html>
